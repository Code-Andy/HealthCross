<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.examples.android.healthcross.Burns">

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Drawer_Layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 1st Degree"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"/>


            <TextView
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:text="- Soaking the wound in cool water for five minutes or longer\n- Applying cream to soothe the skin \n- Using an antibiotic ointment and loose gauze to protect the affected area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c60000"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="160dp"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/red_border_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 2nd Degree"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"/>


            <TextView
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:text="- Running the skin under cool water for 15 minutes or longer\n- Taking over-the-counter pain medication\n- Applying antibiotic cream to blisters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c60000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="320dp"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/red_border_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 3rd Degree"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"/>


            <TextView
                android:textSize="20dp"
                android:text="- Never Attempt to treat a Third Degree burn\n- Press Emergency Button Immediately"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c60000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="430dp"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/red_border_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


        <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:menu="@menu/navigation_menu"
            android:layout_gravity="start"
            android:id="@+id/navview"/>

    </android.support.v4.widget.DrawerLayout>

</android.widget.RelativeLayout>
