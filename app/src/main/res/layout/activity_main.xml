<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.examples.android.healthcross.MainActivity">

    <LinearLayout

        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/Health_Tracker"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/layout_border"
            android:gravity="center"
            android:text="Health Tracker"
            android:textColor="#228B22"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Tips_News"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/layout_border"
            android:gravity="center"
            android:text="Tips n' News"
            android:textColor="#228B22"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Setting"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/layout_border"
            android:gravity="center"
            android:text="Settings"
            android:textColor="#228B22"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/About"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/layout_border"
            android:gravity="center"
            android:text="About"
            android:textColor="#228B22"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/Emergency"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/red_layout_border"
            android:gravity="center"
            android:text="911"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </LinearLayout
>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="270dp"
        android:layout_marginLeft="75dp"
        android:orientation="vertical"
        android:background="@drawable/layout_border">

        <TextView
            android:id="@+id/Cut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cut"
            android:textColor="#228B22"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/Puncture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puncture"
            android:layout_alignBottom="@id/Cut"
            android:textColor="#228B22"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/Scrapes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scrapes"
            android:textColor="#228B22"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/Burns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Burns"
            android:textColor="#228B22"
            android:textSize="24sp"/>



    </LinearLayout>



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="270dp"
        android:background="@drawable/layout_border">

        <TextView
            android:id="@+id/Display"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Display"
            android:textColor="#228B22"
            android:textSize="24sp" />
    </ScrollView>

</android.support.constraint.ConstraintLayout>
