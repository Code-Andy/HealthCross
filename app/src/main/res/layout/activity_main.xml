<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.examples.android.healthcross.MainActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:background="@drawable/layout_border">

        <TextView
            android:id="@+id/Display"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Display"
            android:textColor="#228B22"
            android:textSize="24sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="210dp"
        android:orientation="vertical"
        android:background="@drawable/layout_border">

        <TextView
            android:id="@+id/Cut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cut"
            android:gravity="center"
            android:textColor="#228B22"
            android:textSize="38sp"/>

        <TextView
            android:id="@+id/Puncture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puncture"
            android:gravity="center"
            android:layout_alignBottom="@id/Cut"
            android:textColor="#228B22"
            android:textSize="38sp"/>

        <TextView
            android:id="@+id/Scrapes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scrapes"
            android:gravity="center"
            android:textColor="#228B22"
            android:textSize="38sp"/>

        <TextView
            android:id="@+id/Bones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Splinters"
            android:gravity="center"
            android:textColor="#228B22"
            android:textSize="38sp"/>

        <TextView
            android:id="@+id/Burns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Burns"
            android:gravity="center"
            android:textColor="#228B22"
            android:textSize="38sp"/>

        <TextView
            android:id="@+id/Remedies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remedies"
            android:gravity="center"
            android:textColor="#228B22"
            android:textSize="38sp"/>


    </LinearLayout>

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Drawer_Layout">

        <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:showAsAction="always"
            app:menu="@menu/navigation_menu"
            android:layout_gravity="start"
            android:id="@+id/navview"/>

    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>
