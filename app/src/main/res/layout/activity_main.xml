<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.examples.android.healthcross.MainActivity">

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Drawer_Layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars = "vertical"
            android:scrollbarStyle="insideOverlay"
            android:background="@color/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please Click One of the Options Below"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/fracturetitle"
                    android:layout_width="match_parent"
                    android:background="@drawable/red_border_top"
                    android:layout_height="wrap_content"
                    android:onClick="openFracturesActivity"
                    android:text=" Fractures"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="#c60000" />

                <TextView
                    android:id="@+id/fracturedescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:onClick="openFracturesActivity"
                    android:text="• For broken arms, legs and other bones\n• How to treat the wound and hold it in place"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"

                    />



                <TextView
                    android:id="@+id/burnstitle"
                    android:layout_width="match_parent"
                    android:background="@drawable/red_border_top"
                    android:layout_height="wrap_content"
                    android:onClick="openBurnsActivity"
                    android:text=" Burns"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="#c60000"/>

                <TextView
                    android:id="@+id/burnsdescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:onClick="openBurnsActivity"
                    android:text="• For fire burns, chemical burns\n• How to treat the wound, and disinfect it"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/cutstitle"
                    android:layout_width="match_parent"
                    android:background="@drawable/red_border_top"
                    android:layout_height="wrap_content"
                    android:onClick="openCutActivity"
                    android:text=" Cuts"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="#c60000"/>
                <TextView
                    android:id="@+id/cutsdescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:onClick="openCutActivity"
                    android:text="• For a slashed wound caused by a sharp fragment\n• Deeper wound then a scratch"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/scrapestitle"
                    android:layout_width="match_parent"
                    android:background="@drawable/red_border_top"
                    android:layout_height="wrap_content"
                    android:onClick="openScrapesActivity"
                    android:text=" Scrapes"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="#c60000"/>
                <TextView
                    android:id="@+id/scrapesdescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:onClick="openScrapesActivity"
                    android:text="• For a rub on a hard surface causing damage or pain\n• How to treat the wound, and disinfect it"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp" />



                <TextView
                    android:id="@+id/puncturestitle"
                    android:layout_width="match_parent"
                    android:background="@drawable/red_border_top"
                    android:layout_height="wrap_content"
                    android:onClick="openPuncturesActivity"
                    android:text=" Punctures"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="#c60000"/>
                <TextView
                    android:id="@+id/puncturesdescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:onClick="openPuncturesActivity"
                    android:text="• For a pierced or penetrated part of the skin\n• How to treat the wound, and disinfect it"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp" />



                <TextView
                    android:id="@+id/splinterstitle"
                    android:layout_width="match_parent"
                    android:background="@drawable/red_border_top"
                    android:layout_height="wrap_content"
                    android:onClick="openSplintersActivity"
                    android:text=" Splinters"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="#c60000" />
                <TextView
                    android:id="@+id/splintersdescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:onClick="openSplintersActivity"
                    android:text="• A small, thin, sharp material penetrating the skin\n• How to treat the wound, and disinfect it"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/cprtitle"
                    android:layout_width="match_parent"
                    android:background="@drawable/red_border_top"
                    android:layout_height="wrap_content"
                    android:onClick="openCPRActivity"
                    android:text=" CPR"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="#c60000"/>

                <TextView
                    android:id="@+id/cprdescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:onClick="openCPRActivity"
                    android:text="• A medical procedure involving repeated compression of a patient's chest"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/flutitle"
                    android:layout_width="match_parent"
                    android:background="@drawable/red_border_top"
                    android:layout_height="wrap_content"
                    android:onClick="openFluActivity"
                    android:text=" Flu"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="#c60000" />

                <TextView
                    android:id="@+id/fludescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:onClick="openFluActivity"
                    android:text="• A common sickness that many contract during the flu season"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp" />


            </LinearLayout>

        </ScrollView>


        <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:menu="@menu/navigation_menu"
            android:layout_gravity="start"
            android:id="@+id/navview"/>

    </android.support.v4.widget.DrawerLayout>


</RelativeLayout>
