<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.examples.android.healthcross.MainActivity">

    <LinearLayout

        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/Health_Tracker"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/layout_border"
            android:gravity="center"
            android:text="Health Tracker"
            android:textColor="#228B22"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Tips_News"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/layout_border"
            android:gravity="center"
            android:text="Tips n' News"
            android:textColor="#228B22"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Setting"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/layout_border"
            android:gravity="center"
            android:text="Settings"
            android:textColor="#228B22"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/About"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/layout_border"
            android:gravity="center"
            android:text="About"
            android:textColor="#228B22"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/Emergency"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/red_layout_border"
            android:gravity="center"
            android:text="911"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="270dp"
        android:paddingLeft="75dp">

        <TextView
            android:id="@+id/Situation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_border"
            android:gravity="center"
            android:text="Select Situation"
            android:textColor="#228B22"
            android:textSize="24sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="270dp">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/Display"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/layout_border"
                android:text="Display"
                android:textColor="#228B22"
                android:textSize="24sp" />
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
