<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.examples.android.healthcross.MainActivity">

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/Drawer_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:columnOrderPreserved="true"
                    android:padding="10dp"
                    android:rowCount="5">

                    <!-- Row 1 -->
                    <!-- Column 1 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="8dp"
                        android:onClick="openFracturesActivity"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="2dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="6dp"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/fractureicon"
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:src="@drawable/fractureicon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/fractureicon"
                                android:layout_centerHorizontal="true"
                                android:text="Fractures"
                                android:textColor="@color/colorFont"
                                android:textSize="18sp" />


                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                    <!-- Row 1 -->
                    <!-- Column 2 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="8dp"
                        android:onClick="openBurnsActivity"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="2dp">
                        <!-- Row 1 -->
                        <!-- Column 2 -->
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="6dp"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/burnicon"
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:src="@drawable/burnicon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/burnicon"
                                android:layout_centerHorizontal="true"
                                android:text="Burns"
                                android:textColor="@color/colorFont"
                                android:textSize="18sp" />


                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <!-- Row 2 -->
                    <!-- Column 1 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="16dp"
                        android:onClick="openCutActivity"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="2dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="6dp"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/cutsicon"
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:src="@drawable/cuticon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/cutsicon"
                                android:layout_centerHorizontal="true"
                                android:text="Cuts"
                                android:textColor="@color/colorFont"
                                android:textSize="18sp" />


                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <!-- Row 2 -->
                    <!-- Column 2 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="16dp"
                        android:onClick="openScrapesActivity"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="2dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="6dp"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/scrapesicon"
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:src="@drawable/scrapesicon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/scrapesicon"
                                android:layout_centerHorizontal="true"
                                android:text="Scrapes"
                                android:textColor="@color/colorFont"
                                android:textSize="18sp" />


                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <!-- Row 3 -->
                    <!-- Column 1 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="16dp"
                        android:onClick="openPuncturesActivity"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="2dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="6dp"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/punctureicon"
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:src="@drawable/punctureicon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/punctureicon"
                                android:layout_centerHorizontal="true"
                                android:text="Punctures"
                                android:textColor="@color/colorFont"
                                android:textSize="18sp" />


                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <!-- Row 3 -->
                    <!-- Column 2 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="16dp"
                        android:onClick="openSplintersActivity"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="2dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="6dp"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/splintericon"
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:src="@drawable/splintersicon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/splintericon"
                                android:layout_centerHorizontal="true"
                                android:text="Splinters"
                                android:textColor="@color/colorFont"
                                android:textSize="18sp" />


                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <!-- Row 4 -->
                    <!-- Column 1 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="16dp"
                        android:onClick="openCPRActivity"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="2dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="6dp"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/cpricon"
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:src="@drawable/cpricon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/cpricon"
                                android:layout_centerHorizontal="true"
                                android:text="CPR"
                                android:textColor="@color/colorFont"
                                android:textSize="18sp" />


                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <!-- Row 4 -->
                    <!-- Column 2 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="16dp"
                        android:onClick="openFluActivity"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="2dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="6dp"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/sicknessicon"
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:src="@drawable/sicknessicon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/sicknessicon"
                                android:layout_centerHorizontal="true"
                                android:text="Flu"
                                android:textColor="@color/colorFont"
                                android:textSize="18sp" />


                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </GridLayout>

            </LinearLayout>

        </ScrollView>


        <android.support.design.widget.NavigationView
            android:id="@+id/navview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/navigation_menu" />

    </android.support.v4.widget.DrawerLayout>


</RelativeLayout>
